generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RespondentBasicData {
  id           String     @id
  firstName    String  
  lastName     String
  email        String?
  dateOfBirth  DateTime?
  country      String?
  city         String?
  county       String?
  postalCode   String?
  gender       String?
  agreeOnTerms Boolean? 
  activeAccount Boolean @default(true)
  ClaimData    ClaimData?
}

model ClaimData {
  respondentBasicDataId String @id
  email String?
  emailVerified Boolean?
  familyName String?
  givenName String?
  name String?
  nickname String?
  picture String?
  walletAddress String?
  respondentBasicData   RespondentBasicData @relation(fields: [respondentBasicDataId], references: [id])
}